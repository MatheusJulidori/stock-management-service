NODE_ENV=development
PORT=3000

# Prisma / DB (primary and replica)
DATABASE_URL_PRIMARY=postgresql://postgres:postgres@postgres-primary:5432/stockdb
DATABASE_URL_REPLICA=postgresql://postgres:postgres@postgres-replica:5432/stockdb

# Redis
REDIS_URL=redis://redis:6379

# Kafka (comma-separated brokers)
KAFKA_BROKERS=kafka:9092

# RabbitMQ (AMQP URL)
RABBITMQ_URL=amqp://guest:guest@rabbitmq:5672/

# OpenTelemetry
OTEL_COLLECTOR_ENDPOINT=http://otel-collector:4317

# Prometheus / Grafana / Tempo / Loki (for convenience)
PROMETHEUS_URL=http://prometheus:9090
GRAFANA_URL=http://grafana:3000
TEMPO_URL=http://tempo:3200
LOKI_URL=http://loki:3100

# App behavior / tuning
CACHE_TTL_SECONDS=60
RATE_LIMIT_POINTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Optional dev secrets (placeholders)
JWT_SECRET=change-me
